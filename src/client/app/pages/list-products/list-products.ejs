<div class="container mt-5">
    <hr style="border-top: 2px solid #211419;">
</div>
<div class="banner text-center" style="font-family: cursive; color: #211419;">
    <h2>Available Treats</h2>
</div>
<div class="container">
    <div id="message-box" class="alert alert-danger d-none" role="status">
        <p>No treats today</p>
    </div>
</div>
<div id="spinner" class="spinner-grow text-danger text-center d-none" role="status">
    <span class="visually-hidden">Loading...</span>
</div>
<div id="cardDiv">
<div class="container mt-3 d-flex flex-wrap justify-content-center">
    <% if (products && products.length > 0) { %>
        <% products.forEach(function(product) { %>
            <div id="product-<%= product._id %>" class="card m-2 p-2 flex-fill" style="width: 18rem;">
                <img class="card-img-top" src="img/img.jpg" alt="<%= product.name %>">
                <div class="card-body">
                    <h5 class="card-title"><%= product.name %></h5>
                    <p class="card-description"><%= product.description %></p>
                    <p class="card-price">Price: <%= product.price %></p>
                    <p class="card-onHand">QTY: <%= product.onHand %></p>
                    <p class="card-listedAt">Listed At: <%= new Date(product.createdAt).toLocaleString() %></p>
                    <a href="#" class="btn btn-outline-primary">
                        <i class="fas fa-shopping-cart"></i> Add to cart
                    </a>
                    <a href="#" class="btn btn-outline-warning edit-btn" data-id="<%= product._id %>">Edit</a>
                    <a href="#" class="btn btn-outline-danger delete-btn" data-id="<%= product._id %>" data-name="<%= product.name %>">Delete</a>
                </div>
            </div>
        <% }) %>
    <% } %>
</div>
</div>
<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Confirm Deletion</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Are you sure you want to delete this product?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
        </div>
      </div>
    </div>
  </div>
<ul id="pagination" class="pagination justify-content-end mb-0"></ul>
