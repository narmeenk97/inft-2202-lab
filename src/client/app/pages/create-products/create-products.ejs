<div class="container mt-5">
    <hr style="border-top: 2px solid #211419;">
  </div>
  <div id="page-title" class="banner text-center" style="font-family: cursive; color: #211419;">
    <h2>Request Treats</h2>
  </div>
  <div id="spinner" class="d-none justify-content-center align-items-center spinner-grow text-danger" role="status">
    <span class="visually-hidden">Loading...</span>
  </div> 
  <div class="container" id="form-container">
  <form id="form">
    <input type="hidden" id="action" name="action" value="add">
    <div class="mb-2">
        <label for="name" class="form-label" style="font-family: cursive; color: #211419;">Name of Treat:</label>
        <input type="text" class="form-control" id="name" name="name" required>
        <p id="nameError" class="text-danger d-none">Please reenter the treats Name and try again.</p>
        <p id="duplicateError" class="text-danger d-none">This treat name already exists. Please choose another name.</p>
    </div>
    <div class="mb-3">
      <label for="price" class="form-label" style="font-family: cursive; color: #211419;">Price of treat (to 2 decimal places):</label>
      <input type="number" class="form-control" id="price" name="price" step="0.01" min="0" placeholder="0.00" required>
      <p id="priceError" class="text-danger d-none">Please reenter the Price and try again.</p>
    </div> 
    <!--  -->
    <div class="mb-4">
      <label for="onHand" class="form-label" style="font-family: cursive; color: #211419;">Quantity on Hand:</label>
      <input type="number" class="form-control" id="onHand" name="onHand" required>
      <p id="stockError" class="text-danger d-none">Please reenter the quantity on hand and try again.</p>
    </div>
    <div class="mb-4">
      <label for="description" class="form-label" style="font-family: cursive; color: #211419;">Describe the treat:</label>
      <input type="text" class="form-control" id="description" name="description" required>
      <p id="desError" class="text-danger d-none">Please reenter the description and try again.</p>
    </div>
    <div class="mb-3">
      <button id ="button" name="button" class="btn btn-outline-primary btn-sm mt-3" style="font-family: cursive; color: #211419;">Add Treat</button>
    </div>  
  </form>
  </div>